{
  "name": "sk-web-gui",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "description": "",
  "main": "",
  "directories": {},
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean-dist": "yarn lerna exec rimraf dist",
    "boot": "yarn && yarn build:nocache",
    "boot:web": "yarn && yarn build:web:nocache",
    "boot:storybook": "yarn && lerna run build:esm --no-private --stream --skip-nx-cache && yarn build-storybook",
    "reboot": "yarn clean-dist | yarn cache clean && yarn boot",
    "dev": "yarn dev-storybook",
    "dev:test": "yarn dev-storybook --test",
    "lerna-watch": "lerna watch -- lerna run build --verbose --scope=%LERNA_PACKAGE_NAME%",
    "build": "lerna run build --no-private --stream",
    "build:web": "lerna run build:esm,build:types --no-private --stream",
    "build:types": "lerna run build:types",
    "build:nocache": "yarn build --skip-nx-cache",
    "build:web:nocache": "yarn build:web --skip-nx-cache",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "yarn storybook",
    "storybook": "storybook dev -p 6006 -s public",
    "storybook:prod": "http-server storybook-static",
    "dev-storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build -o ./storybook-static",
    "release": "changeset publish",
    "link-all": "yarn unlink-all && lerna exec --parallel yarn link",
    "unlink-all": "lerna exec --parallel --bail=false yarn unlink",
    "lint": "eslint ./packages",
    "prepare": "husky"
  },
  "resolutions": {
    "**/react": "^18.2.0",
    "**/react-dom": "^18.2.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@babel/runtime": "^7.25.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@storybook/addon-a11y": "^8.4.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/cli": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.11.0",
    "husky": "^9.1.5",
    "install": "^0.13.0",
    "lerna": "8.1.8",
    "npm": "^10.8.2",
    "postcss": "^8.4.41",
    "postcss-import": "^16.1.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "storybook": "^8.4.2",
    "storybook-dark-mode": "^4.0.2",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "http-server": "^14.1.1",
    "react-hook-form": "^7.53.0"
  }
}
